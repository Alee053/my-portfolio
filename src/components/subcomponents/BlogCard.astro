---
import type { CollectionEntry } from 'astro:content';
import {Image} from "astro:assets";

interface Props {
    post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { heroImage, title, pubDate, tags } = post.data;
---
<a href={`/blog/${post.slug}/`} class="card-link group block overflow-hidden rounded-xl border-2 border-white/10 bg-black/30 backdrop-blur-lg transition-all duration-300 hover:border-primary hover:scale-[1.02] focus:border-primary focus:scale-[1.02]">
    {heroImage && (
            <Image src={heroImage} alt=""  width={400}
                   height={200} class="w-full h-40 object-cover border-b-2 border-white/10 transition-transform duration-300 group-hover:scale-110" />
    )}
    <div class="p-4 space-y-3">
        <h3 class="text-xl font-bold text-white group-hover:text-primary transition-colors">{title}</h3>
        <p class="text-sm text-white/70">
            {pubDate.toLocaleDateString('en-us', { year: 'numeric', month: 'short', day: 'numeric' })}
        </p>
        <div class="flex flex-wrap gap-2">
            {tags.map(tag => (
                    <span class="text-xs bg-white/10 text-primary font-semibold px-2 py-1 rounded-full">{tag}</span>
            ))}
        </div>
    </div>
</a>